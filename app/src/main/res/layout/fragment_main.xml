<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.techease.openspotguard.MainFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="300sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="10sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivRefresh"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20sp"
                    android:src="@drawable/resresh" />
                <Button
                    android:id="@+id/btnAddBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:background="#000"
                    android:text="Add Booking"
                    android:paddingRight="5sp"
                    android:drawablePadding="5sp"
                    android:paddingLeft="5sp"
                    android:drawableRight="@drawable/add"
                    android:textColor="#fff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:orientation="vertical">
    <GridView
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="0sp"
        android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:verticalSpacing="5dp"
        android:background="#fff"
        android:stretchMode="columnWidth"
        android:numColumns="6"
        android:layout_centerInParent="true"
        android:id="@+id/gv"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.1"
                android:layout_marginTop="20sp"
                android:gravity="left"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10sp"
                android:background="#fff"
                android:layout_marginLeft="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="20sp"
                    android:layout_margin="5sp"
                    android:background="@color/colorAccent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Booked by app(not editable)"
                    android:layout_margin="5sp"/>
                <TextView
                    android:layout_width="25sp"
                    android:layout_height="20sp"
                    android:layout_margin="5sp"
                    android:background="@color/colorOrange"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Booked by phone(editable)"
                    android:layout_margin="5sp"/>
                <TextView
                    android:layout_width="25sp"
                    android:layout_height="20sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/smallzigzag"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Not available"
                    android:layout_margin="5sp"/>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
